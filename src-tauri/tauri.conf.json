{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lexicon",
  "version": "1.0.0",
  "identifier": "com.lexicon.dataset-tool",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Lexicon - Universal RAG Dataset Preparation Tool",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "titleBarStyle": "Visible",
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true,
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": [
      "dmg",
      "app",
      "msi",
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "Universal RAG Dataset Preparation Tool",
    "longDescription": "Transform any text content into high-quality RAG datasets for AI applications. Supports technical docs, academic papers, business documents, literature, and more with advanced processing and export capabilities.",
    "publisher": "Lexicon",
    "copyright": "Copyright Â© 2025 Lexicon. All rights reserved.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "fs": {
      "scope": [
        "$APPDATA",
        "$APPDATA/**",
        "$HOME/Documents/**",
        "$HOME/Downloads/**",
        "$LOCALDATA",
        "$LOCALDATA/**",
        "$DESKTOP",
        "$DESKTOP/**"
      ]
    },
    "dialog": {
      "all": true
    },
    "shell": {
      "sidecar": true,
      "scope": [
        {
          "name": "python",
          "cmd": "python3",
          "args": true
        },
        {
          "name": "python-win",
          "cmd": "python",
          "args": true
        },
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": [
            "/C"
          ]
        },
        {
          "name": "powershell",
          "cmd": "powershell",
          "args": [
            "-Command"
          ]
        }
      ]
    },
    "notification": {
      "all": true
    }
  },
  "package": {
    "version": "1.0.2"
  }
}
