{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lexicon",
  "version": "1.0.0",
  "identifier": "com.lexicon.dataset-tool",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Lexicon - Personal RAG Dataset Preparation Tool",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "titleBarStyle": "Visible"
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "Personal RAG Dataset Preparation Tool",
    "longDescription": "Transform your books and documents into high-quality RAG datasets for AI applications. Specializing in Vedic texts with advanced scraping, processing, and enrichment capabilities.",
    "publisher": "Lexicon",
    "copyright": "Copyright Â© 2025 Lexicon. All rights reserved."
  },
  "plugins": {
    "fs": {
      "scope": ["$APPDATA", "$APPDATA/**", "$HOME/Documents/**", "$HOME/Downloads/**"]
    },
    "dialog": {
      "all": true
    },
    "shell": {
      "sidecar": true,
      "scope": [
        {
          "name": "python",
          "cmd": "python3",
          "args": true
        }
      ]
    },
    "notification": {
      "all": true
    }
  }
}
